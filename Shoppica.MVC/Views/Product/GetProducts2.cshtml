@model IEnumerable<Shoppica.MVC.ViewModels.ProductVM>

@{
    ViewData["Title"] = "GetProducts";

}
@{
    string catName = Model.FirstOrDefault().Category.CategoryName;
    int k = (int)Model.FirstOrDefault().Category.TopId;
}


