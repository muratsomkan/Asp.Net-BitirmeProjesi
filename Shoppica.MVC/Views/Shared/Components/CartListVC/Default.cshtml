@model IEnumerable<Shoppica.MVC.ViewModels.CartProdVM>

@{
    decimal toplam = 0;
}
@foreach (var item in Model)
{
    <div class="s_cart_item">
        <a id="hremove_95" class="s_button_remove" href="/cart/cartDelete/@item.Id">&nbsp;</a>
        <span class="block">@item.Quantity x <a href="/product/getproductdetails/@item.ProductId">@item.ProductName</a></span>
    </div>
    toplam += item.Total;

}
@{
    decimal kdvsiz = toplam / (decimal)1.18;
    decimal kdv = toplam - kdvsiz;
}
<span class="clear s_mb_15 border_eee"></span>
<div class="s_total clearfix">
    <strong class="cart_module_total left">Ürün Tutar:</strong>
    <span class="cart_module_total">@String.Format("{0:0.00}",kdvsiz)<span class="s_currency s_after"> TL</span></span>
</div>
<div class="s_total clearfix">
    <strong class="cart_module_total left">KDV Tutarı(18%):</strong>
    <span class="cart_module_total">@String.Format("{0:0.00}",kdv)<span class="s_currency s_after"> TL</span></span>
</div>
<div class="s_total clearfix">
    <strong class="cart_module_total left">Toplam:</strong>
    <span class="cart_module_total">@String.Format("{0:0.00}",toplam)<span class="s_currency s_after"> TL</span></span>
</div>
<span class="clear s_mb_15"></span>
<div class="align_center clearfix">
    <a class="s_button_1 s_secondary_color_bgr s_ml_0" href="/cart/"><span class="s_text">Sepetim</span></a>
    <a class="s_button_1 s_secondary_color_bgr" href="~/checkout/"><span class="s_text">Sipariş Ver</span></a>
</div>
